<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Account</th>
      <th>Descriotion</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% bills.each do |bill| %>
        <tr>
            <td><%= bill.date.to_s %></td>
            <td><%= bill.account.name %></td>
            <td><%= bill.description %></td>
            <td><%= bill.amount %></td>
        </tr>
    <% end %>
  </tbody>
</table>
