<%= form_tag update_user_path(:id => @user.id) do %>
    <div class="field">
        <%= label_tag :email %>
        <%= text_field_tag :email, @user.email %>
    </div>

    <div class="field">
        <%= label_tag :password %>
        <%= text_field_tag :password %>
    </div>

    <div class="field">
        <%= label_tag :can_manage %>
        <%= check_box_tag :can_manage, value=1, checked = @user.can_manage %>
    </div>
    <div class="field">
        <%= label_tag :can_sell %>
        <%= check_box_tag :can_sell, value=1, checked = @user.can_sell %>
    </div>
    <div class="field">
        <%= label_tag :can_report %>
        <%= check_box_tag :can_report, value=1, checked = @user.can_report%>
    </div>

    <div class="actions">
        <%= submit_tag %>
    </div>
<% end %>
